{
    "manifest_version": 2,
    "name": "Text Editor",
    "description": "Description of the app",
    "version": "0.1.0",
    "app": {
        "background": {
            "scripts": [
                "background.js"
            ]
        }
    },
    "icons": {
        "128": "www/droid128.jpg"
    },
    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        {
            "fileSystem": [
                "write",
                "retainEntries",
                "directory"
            ]
        },
        "unlimitedStorage"
    ]
}
